<!--사용자 모임 출석 페이지-->

<!DOCTYPE html>
<html lang=en>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>My MOIM</title>

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

    <script src="//code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js"></script>

    <!-- Custom styles for this template -->
    <link href="form-validation.css" rel="stylesheet">
</head>

<body>
    <header>
        <div class="fixed-top d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
            <a href="/home" class="p-2 text-dark">MOIM</a>
            <h5 class="my-0 mr-md-auto font-weight-normal"></h5>
            <nav class="my-2 my-md-0 mr-md-3">
                <a href="#" class="p-2 text-dark"><span class="fa fa-search"></span></a>
                <% if (user.provider == undefined || user.provider == '') { %>
                <a href="/profile/profile_main" class="p-2 text-blue">
                    <%= user.name %> 님 환영합니다</a>
                <a href="/logout" class="p-2 text-dark"><span class="fa fa-sign-in">
                        <% } %>
                    </span></a>
            </nav>
        </div>
    </header>
    <br><br><br>
    <!--출석부, 출석인증 페이지 연결-->
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/moim/moimHome?id=<%=moim._id%>">
                                <span data-feather="home"></span>
                                MoimHome <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="users"></span>
                                참여자 목록
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/moim/att_user?id=<%=moim._id%>">
                                <span data-feather="shopping-cart"></span>
                                출석부
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file"></span>
                                게시판
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/moim/att_verification">
                                <span data-feather="layers"></span>
                                출석인증
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>모임 관리</span>
                        <a class="d-flex align-items-center text-muted" href="#">
                            <span data-feather="plus-circle"></span>
                        </a>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                인증 번호
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/moim/allAttendance?id=<%=moim._id%>">
                                <span data-feather="file-text"></span>
                                전체 출석부
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/moim/moimSetting?id=<%=moim._id%>">
                                <span data-feather="file-text"></span>
                                회차별 관리
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            
            <!--출석부 내용-->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <%=moim.title%>
                    </h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group mr-2">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle"><span data-feather="bar-chart-2"><a href="/token"></a></span>토큰</button>
                        </div>
                    </div>
                </div>

                <section class="container">
                    <br><br><br>
                    <h1 class="jumbotron-heading">
                        출석 관리</h1><br>

                    
                    <section class=mb-4>
                        <div class=mb-4>
                            <h3>
                                <%=user.name%>님의 모임 출석</h3>
                        </div>
                        <br><br><br>
                        <h4> <%=user.name%>님의 출석률 </h4>
                        <!--출석률 데이터 받아서 출석률, 모임진행률 표시-->
                        <!--예시 40,60퍼 -->
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
                                40%
                            </div>
                        </div>
                        <h4> 모임 진행률 </h4>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                60%
                            </div>
                        </div>

                        <br>
                        <label>모임 출결 데이터</label>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">모임일시</th>
                                    <th scope="col">참여일시</th>
                                    <th scope="col">지각</th>
                                    <th scope="col">출석횟수</th>
                                    <th scope="col">지각횟수</th>
                                    <th scope="col">결석횟수</th>
                                    <th scope="col">출석여부</th>
                                </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </section>

                </section>
            </main>
        </div>
    </div>
</body>

</html>
